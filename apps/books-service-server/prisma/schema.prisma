datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Review {
  book      Book?    @relation(fields: [bookId], references: [id])
  bookId    String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  rating    Int?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Book {
  author          String?
  createdAt       DateTime  @default(now())
  genre           String?
  id              String    @id @default(cuid())
  isAvailable     Boolean?
  publicationDate DateTime?
  reviews         Review[]
  title           String?
  updatedAt       DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  reviews   Review[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
